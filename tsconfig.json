{
  "compilerOptions": {
    "outDir": "./dist/",
    "declarationDir": "./dist/types/",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable", "esnext", "es2016", "es2017"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
